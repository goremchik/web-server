{
  "name": "web-server",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "start": "npm run server:watch",
    "server:start": "nodemon index.js",
    "server:build": "babel src -d dist",
    "server:watch": "nodemon --exec babel-node --watch src src/app.js",
    "client:install": "npm i --prefix client",
    "client:build": "dotenv -- npm run --prefix client build",
    "client:copy": "cpy client/dist/** static",
    "client:deploy": "npm run client:install && npm run client:build && npm run client:copy",
    "eslint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goremchik/web-server.git"
  },
  "author": "Andrii Shoferivskyi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/goremchik/web-server/issues"
  },
  "homepage": "https://github.com/goremchik/web-server#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint"
    }
  },
  "dependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "@babel/register": "^7.13.14",
    "babel-polyfill": "^6.26.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "mongodb": "^3.6.6",
    "mongoose": "^5.12.3",
    "nodemon": "^2.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/node": "^7.13.13",
    "@babel/preset-env": "^7.13.15",
    "babel-eslint": "^10.1.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "cpy-cli": "^3.1.1",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.24.0",
    "husky": "^6.0.0",
    "prettier": "2.2.1"
  }
}
